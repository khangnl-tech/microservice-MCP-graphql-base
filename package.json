{
  "name": "node-microservices",
  "private": true,
  "workspaces": ["apps/*", "libs/*"],
  "scripts": {
    "dev:gw": "npm run dev -w apps/api-gateway",
    "dev:chat": "npm run dev -w apps/chat-service",
    "dev:agent": "npm run dev -w apps/agent-service",
    "dev:all": "concurrently -n gw,chat,agent \"npm:dev:gw\" \"npm:dev:chat\" \"npm:dev:agent\"",
    "build": "tsc -b",
    "lint": "echo 'add eslint if desired'"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "mongoose": "^8.6.1",
    "nats": "^2.26.0",
    "swagger-ui-express": "^5.0.1",
    "zod": "^3.23.8"
  }
}
