# Environment Configuration
NODE_ENV=development
PORT=4000

# Database Configuration - Each service has its own database
# Gateway Service
GATEWAY_MONGODB_URI=mongodb://admin:password@localhost:27017/gateway_db?authSource=admin
GATEWAY_REDIS_URL=redis://localhost:6379

# Auth Service
AUTH_MONGODB_URI=mongodb://admin:password@localhost:27018/auth_db?authSource=admin
AUTH_REDIS_URL=redis://localhost:6380

# AI Service
AI_MONGODB_URI=mongodb://admin:password@localhost:27019/ai_db?authSource=admin
AI_REDIS_URL=redis://localhost:6381

# Media Service
MEDIA_MONGODB_URI=mongodb://admin:password@localhost:27020/media_db?authSource=admin
MEDIA_REDIS_URL=redis://localhost:6382

# User Service
USER_MONGODB_URI=mongodb://admin:password@localhost:27021/user_db?authSource=admin
USER_REDIS_URL=redis://localhost:6383

# Notification Service
NOTIFICATION_MONGODB_URI=mongodb://admin:password@localhost:27022/notification_db?authSource=admin
NOTIFICATION_REDIS_URL=redis://localhost:6384

# Legacy configuration (for backward compatibility)
MONGODB_URI=mongodb://admin:password@localhost:27017/microservice_db?authSource=admin
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Service URLs
AUTH_SERVICE_URL=http://localhost:4001
AI_SERVICE_URL=http://localhost:4002
MEDIA_SERVICE_URL=http://localhost:4003
USER_SERVICE_URL=http://localhost:4004
NOTIFICATION_SERVICE_URL=http://localhost:4005
ORCHESTRATOR_SERVICE_URL=http://localhost:4006

# Qdrant Vector Database
QDRANT_URL=http://localhost:6333

# AI Service API Keys
OPENAI_API_KEY=your-openai-api-key
GOOGLE_AI_API_KEY=your-google-ai-api-key
HUGGINGFACE_API_KEY=your-huggingface-api-key
ELEVENLABS_API_KEY=your-elevenlabs-api-key
TOGETHER_AI_API_KEY=your-together-ai-api-key

# Google Cloud Services
GOOGLE_CLOUD_CREDENTIALS=path/to/google-credentials.json

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Traefik Configuration
TRAEFIK_DASHBOARD_PORT=8080
TRAEFIK_HTTP_PORT=80
TRAEFIK_HTTPS_PORT=443

# Domain Configuration for Services
GATEWAY_DOMAIN=gateway.localhost
AUTH_DOMAIN=auth.localhost
AI_DOMAIN=ai.localhost
MEDIA_DOMAIN=media.localhost
USER_DOMAIN=user.localhost
NOTIFICATION_DOMAIN=notification.localhost
ORCHESTRATOR_DOMAIN=orchestrator.localhost
