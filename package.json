{
  "name": "microservice-mcp-graphql-base",
  "version": "1.0.0",
  "description": "Microservice architecture with GraphQL and MCP standards",
  "main": "src/gateway/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:gateway\" \"npm run dev:auth\" \"npm run dev:ai\" \"npm run dev:media\" \"npm run dev:data\"",
    "dev:gateway": "nodemon src/gateway/index.js",
    "dev:auth": "nodemon src/services/auth/index.js",
    "dev:ai": "nodemon src/services/ai/index.js",
    "dev:media": "nodemon src/services/media/index.js",
    "dev:data": "nodemon src/services/data/index.js",
    "start": "node src/gateway/index.js",
    "start:gateway": "node src/gateway/index.js",
    "start:auth": "node src/services/auth/index.js",
    "start:ai": "node src/services/ai/index.js",
    "start:media": "node src/services/media/index.js",
    "start:data": "node src/services/data/index.js",
    "build": "babel src --out-dir dist",
    "lint": "eslint src/",
    "test": "jest",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "keywords": [
    "microservice",
    "graphql",
    "mcp",
    "nodejs",
    "express",
    "mongodb",
    "redis",
    "ai",
    "ml"
  ],
